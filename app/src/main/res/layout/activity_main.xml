<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnPublico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin autenticar" />

    <Button
        android:id="@+id/btnUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticado como User" />

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticado como Admin" />

    <Button
        android:id="@+id/btnAdminWithHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticado como Admin y Etiqueta Header" />

    <Button
        android:id="@+id/btnUserWithHeaderandHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticado como User y Etiqueta Header y Hash" />

    <EditText
        android:id="@+id/txtUserName"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtPassword"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUserWithHeaderandHashUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autenticado como User y Etiqueta Header y Hash" />

















</LinearLayout>




